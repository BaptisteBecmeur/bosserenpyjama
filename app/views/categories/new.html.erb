<div class="container">
  <div class="row">
    <div class= "col-md-8 col-md-offset-2">
      <h1 class="text-center">Sélection de la catégorie</h1>
      <%= simple_form_for [@post, @category] do |f| %>
        <%= f.error_notification %>
        <%= f.input :name, label: "Nom de la catégorie", placeholder: "SEO, WordPress, HTML, Tutoriel..." %>
        <%= f.submit "Ajouter", class: "btn btn-primary" %>
      <% end %>
      <h4 class="text-center">
        <%= link_to '< Retour', :back, class: "btn btn-default" %>
      </h4>
    </div>
  </div>
</div>
