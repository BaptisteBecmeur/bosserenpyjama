<div class="container" id="home-articles">
  <div class="row">
    <h2>Mes favoris</h2>
        <% @favs.each do |fav| %>
      <div class=" col-sm-12 col-xs-6 col-md-4 container-cards">
        <div class="card-filter-home" style="background: url(<%= cloudinary_url fav.post.cover %>); background-size:cover">
      </div>
      <div class="card-details">
        <%= link_to post_path(fav.post) do %>
        <span class="card-post-tag card-post-tag-<%= fav.post.tag.downcase %>"><%= fav.post.tag %></span>
        <h4><%= fav.post.title %></h4>
        <h6 class="card-post-author">
          post√© par Baptiste
        </h6>
        <%= link_to "Supprimer", fav_path(fav), class:'btn btn-default', method: :delete %>
      <% end %>
    </div>
      <% end %>
    </div>
  </div>
</div>
