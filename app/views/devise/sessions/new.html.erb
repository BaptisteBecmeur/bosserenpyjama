<div class="container-login">
  <div class="container-fluid">
    <div class="row">
      <div class= "col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 form-login ">
          <div class="form-bg form-one">

          <h3 class="text-center">Se connecter</h3>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <div class="margin-place text-center">
                <%= f.input :email, label: 'Email', required: false, autofocus: true %>
              </div>
              <div class="margin-place text-center">
                <%= f.input :password, label: 'Password', required: false %>
              </div>
              <div class="margin-place text-center">
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Log in", class: "btn login-btn btn-default" %>
            </div>
          <% end %>

          <%= render "devise/shared/linklog" %>
        </div>
      </div>
    </div>
  </div>
</div>

